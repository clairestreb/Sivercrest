@model Silvercrest.ViewModels.Main.AccountViewModels.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Reset password";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "form1" }))
{
    @Html.AntiForgeryToken()
    <h4>Reset your password.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger", id = "validationMessage" })
    @Html.HiddenFor(model => model.Code)
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "password"})
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "passwordcheck" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })


        </div>
    </div>
    <input type="hidden" value="@Model.SecretQuestion1" name="SecretQuestion1" />
    <input type="hidden" value="@Model.SecretQuestion2" name="SecretQuestion2" />
    <input type="hidden" value="@Model.SecretQuestion3" name="SecretQuestion3" />

    <div class="form-group required">
        <label for="firstAnswer" class="control-label" style="text-align: left;">@Model.SecretQuestion1</label>

        <div class="col-md-12">
            @Html.TextBoxFor(m => m.QuestionAnswer1, new { @class = "form-control", id = "firstAnswer" })
            @Html.ValidationMessageFor(m => m.QuestionAnswer1, "", new { @class = "text-danger" })
         </div>
    </div>
    <div class="form-group required">
        <label for="secondAnswer" class="control-label" style="text-align: left;">@Model.SecretQuestion2</label>
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.QuestionAnswer2, new { @class = "form-control", id = "secondAnswer" })
            @Html.ValidationMessageFor(m => m.QuestionAnswer2, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group required">
        <label for="thirdAnswer" class="control-label" style="text-align: left;">@Model.SecretQuestion3</label>
       <div class="col-md-12">
            @Html.TextBoxFor(m => m.QuestionAnswer3, new { @class = "form-control", id = "thirdAnswer" })
            @Html.ValidationMessageFor(m => m.QuestionAnswer3, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-12">
            <input type="submit" class="btn btn-default btn-red" value="Reset" />
        </div>
    </div>
}
