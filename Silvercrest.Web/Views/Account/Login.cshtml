@using Silvercrest.ViewModels.Main.AccountViewModels

@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Login";

}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", id = "UserLoginForm", role = "form" }))
{
    <fieldset>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group required">
            @Html.LabelFor(m => m.Email, new { @class = "" })

            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", maxlength = "50", required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        </div>
        <div class="form-group required">
            @Html.LabelFor(m => m.Password, new { @class = "" })

            @Html.PasswordFor(m => m.Password, new { @class = "form-control", maxlength = "50", required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        </div>
        <div style="display:none;">
            <input type="hidden" name="_method" value="POST">
        </div>


        <button type="submit" class="btn btn-default btn-red block-on-small">Sign In</button>
        @Html.ActionLink("Forgot password?", "ForgotPassword", "Account", new { @class = "reset1 block-on-small" })
    </fieldset>
}
